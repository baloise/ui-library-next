{
  "name": "root",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "npm run lib:build && npm run lib:vue:build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "publish": "lerna publish --yes",
    "vue:serve": "npm --prefix packages/examples/vue run serve",
    "lib:build": "npm --prefix packages/ui-library-next run build",
    "lib:vue:build": "npm --prefix packages/ui-library-next-vue run build",
    "lib:vue:clean": "rimraf packages/ui-library-next-vue/node_modules",
    "lib:serve": "npm --prefix packages/ui-library-next run serve",
    "lib:serve:ie": "npm --prefix packages/ui-library-next run serve:ie",
    "testing:run": "npm --prefix packages/ui-library-next-testing run ci",
    "testing:serve": "npm --prefix packages/ui-library-next-testing run serve",
    "testing:server": "npm --prefix packages/ui-library-next-testing run start-server"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "cypress": "^5.2.0"
  }
}
